package smap

type Smap struct {
	Method  string
	Key     any
	Value   any
	DataMap map[any]any

	SmapCh   chan *Smap
	ReturnCh chan any
}

type KeyValuePair struct {
	Key   any
	Value any
}

func NewSmap() *Smap {
	obj := &Smap{
		Method:   "",
		DataMap:  make(map[any]any),
		SmapCh:   make(chan *Smap),
		ReturnCh: make(chan any),
	}
	go obj.schedule()
	return obj
}

func (s *Smap) schedule() {
	for obj := range s.SmapCh {
		switch obj.Method {
		case "Set":
			s.set(obj.Key, obj.Value)
		case "Delete":
			s.delete(obj.Key)
		case "Get":
			s.get(obj.Key, obj.ReturnCh)
		case "Iter":
			s.iter(obj.ReturnCh)
		case "Len":
			s.len(obj.ReturnCh)
		}
	}
}

func (s *Smap) Set(k, v any) {
	Set := NewSmap()
	Set.Method = "Set"
	Set.Key = k
	Set.Value = v
	s.SmapCh <- Set
}
func (s *Smap) set(k, v any) {
	s.DataMap[k] = v
}

func (s *Smap) Delete(k any) {
	Delete := NewSmap()
	Delete.Method = "Delete"
	Delete.Key = k
	s.SmapCh <- Delete
}
func (s *Smap) delete(k any) {
	delete(s.DataMap, k)
}

func (s *Smap) Get(k any) any {
	Get := NewSmap()
	Get.Method = "Get"
	Get.Key = k
	s.SmapCh <- Get
	v := <-Get.ReturnCh
	return v
}
func (s *Smap) get(k any, ReturnCh chan any) {
	v, ok := s.DataMap[k]
	if !ok {
		ReturnCh <- nil
	} else {
		ReturnCh <- v
	}
}

func (s *Smap) Iter(IterCh chan any) {
	Iter := NewSmap()
	Iter.Method = "Iter"
	s.SmapCh <- Iter
	go func() {
		for elt := range Iter.ReturnCh {
			if elt == nil {
				break
			}
			IterCh <- elt
		}
		close(IterCh)
	}()
}
func (s *Smap) iter(ReturnCh chan any) {
	for k, v := range s.DataMap {
		ReturnCh <- &KeyValuePair{Key: k, Value: v}
	}
	ReturnCh <- nil
}

func (s *Smap) Len() int {
	Len := NewSmap()
	Len.Method = "Len"
	s.SmapCh <- Len
	length := <-Len.ReturnCh
	lengthInt := length.(int)
	return lengthInt
}
func (s *Smap) len(ReturnCh chan any) {
	ReturnCh <- len(s.DataMap)
}
