package smap

type Smap struct {
	Method  string
	Key     any
	Value   any
	DataMap map[any]any

	SmapCh chan *Smap
	TxCh   chan any
}

type KeyValuePair struct {
	Key   any
	Value any
}

func NewSmap() *Smap {
	obj := &Smap{
		Method:  "",
		DataMap: make(map[any]any),
		SmapCh:  make(chan *Smap),
		TxCh:    make(chan any),
	}
	go obj.schedule()
	return obj
}

func (o *Smap) schedule() {
	for obj := range o.SmapCh {
		switch obj.Method {
		case "Set":
			o.set(obj.Key, obj.Value)
		case "Delete":
			o.delete(obj.Key)
		case "Get":
			o.get(obj.Key, obj.TxCh)
		case "Iter":
			o.iter(obj.TxCh)
		case "Len":
			o.len(obj.TxCh)
		}
	}
}

func (o *Smap) Set(k, v any) {
	Set := NewSmap()
	Set.Method = "Set"
	Set.Key = k
	Set.Value = v
	o.SmapCh <- Set
}
func (o *Smap) set(k, v any) {
	o.DataMap[k] = v
}

func (o *Smap) Delete(k any) {
	Delete := NewSmap()
	Delete.Method = "Delete"
	Delete.Key = k
	o.SmapCh <- Delete
}
func (o *Smap) delete(k any) {
	delete(o.DataMap, k)
}

func (o *Smap) Get(k any) any {
	Get := NewSmap()
	Get.Method = "Get"
	Get.Key = k
	o.SmapCh <- Get
	v := <-Get.TxCh
	return v
}
func (o *Smap) get(k any, TxCh chan any) {
	v, ok := o.DataMap[k]
	if !ok {
		TxCh <- nil
	} else {
		TxCh <- v
	}
}

func (o *Smap) Iter(IterCh chan any) {

	Iter := NewSmap()
	Iter.Method = "Iter"
	o.SmapCh <- Iter
	go func() {
		for elt := range Iter.TxCh {
			IterCh <- elt
		}
		close(IterCh)
	}()
}
func (o *Smap) iter(TxCh chan any) {
	for k, v := range o.DataMap {
		TxCh <- &KeyValuePair{Key: k, Value: v}
	}
	close(TxCh)
}

func (o *Smap) Len() int {
	Len := NewSmap()
	Len.Method = "Len"
	o.SmapCh <- Len
	length := <-Len.TxCh
	lengthInt := length.(int)
	return lengthInt
}
func (o *Smap) len(TxCh chan any) {
	TxCh <- len(o.DataMap)
}
